from rest_framework import serializers
from antisocial.api.models import User, NeighborHood, Business


class UserSerializer(serializers.HyperlinkedModelSerializer):
    class Meta:
        model = User
        fields = '__all__'
        extra_kwargs = dict(
            password={
                'write_only': True,
                'required': True,
                'allow_null': False
            },
            email={
                'required': True,
                'allow_null': False
            }
        )


class NeighborHoodSerializer(serializers.ModelSerializer):
    class Meta:
        model = NeighborHood
        fields = '__all__'
        extra_kwargs = dict(
            name={
                'required': True,
                'allow_null': False
            },
            location={
                'required': True,
                'allow_null': False
            }
        )


class BusinessSerializer(serializers.ModelSerializer):
    class Meta:
        model = Business
        fields = '__all__'
        extra_kwargs = dict(
            name={
                'required': True,
                'allow_null': False
            },
            user={
                'required': True,
                'allow_null': False
            },
            neighborhood={
                'required': True,
                'allow_null': False
            },
            email={
                'required': True,
                'allow_null': False
            },
            date_created={
                'required': True,
                'allow_null': False
            },
            created_by={
                'required': True,
                'allow_null': False
            },
        )
